<div class="modal" id="user-info" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Create/Edit Character</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="modal-body">
        <form>
          <div class="form-group">
            <label for="inputAccount">Character Name</label>
            <input type="text" class="form-control" id="character_name">
          </div>
          <div class="form-group">
            <label for="inputAccount">Character Description</label>
            <input type="text" class="form-control" id="character_description">
          </div>
        </form>
      </div>

      <div class="modal-footer">
        <button id="login" type="button" class="btn btn-primary">Save</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Discard</button>
      </div>
    </div>
  </div>
</div>

