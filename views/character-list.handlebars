{{> nav/nav-block}}


<div id="home">
  <div class="container">
    <div class="col-8 offset-2"></div>
    <div class="card mb-3">
      <div class="row">
        <div class="col-sm-4">
          <div class="card-header">Character list
          </div>
          <ul class="list-group">
            <li class="list-group-item">Character 1</li>
            <li class="list-group-item">Character 2</li>
            <li class="list-group-item">Character 3</li>
            <li class="list-group-item">Character 4</li>
            <li class="list-group-item">Character 5</li>
            <li class="list-group-item">Character 6</li>
            <li class="list-group-item">Character 7</li>
            <li class="list-group-item">Character 8</li>
            <li class="list-group-item">Character 9</li>
            <li class="list-group-item">Character 10</li>
            <li class="list-group-item">Character 11</li>
          </ul>
          <button type="button" class="btn btn-danger"><a href="/create-edit-character">Create/Edit</a></button>
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <form class="clearfix mb-4" action="POST">
              <div class="form-group">
                <p><strong>Name:</strong> {{character.name}}</p>
                <p><strong>Game: </strong> {{character.game}}</p>
                <p><strong>Description:</strong> {{character.data}}</p>
                <button type="button" class="btn btn-danger"><a href="/create-edit-character">Edit</a></button>
                <button type="button" class="btn btn-danger"><a href="/inventory-tracker">Inventory</a></button>
            </form>
            <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
          </div>
        </div>

      </div>
    </div>
    <button type="button" class="btn btn-danger"><a href="/create-edit-character">Edit</a></button>
    <button type="button" class="btn btn-danger"><a href="/inventory-tracker">Inventory Tracker</a></button>
  </div>
</div>
</div>

